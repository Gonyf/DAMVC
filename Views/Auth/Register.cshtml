@model DAMVC.ViewModels.RegisterUserVm

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<h4>User Registration</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserInfo.Username" class="control-label"></label>
                <input asp-for="UserInfo.Username" class="form-control" />
                <span asp-validation-for="UserInfo.Username" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="UserInfo.Password" class="control-label"></label>
                <input asp-for="UserInfo.Password" class="form-control" type="Password"/>
                <span asp-validation-for="UserInfo.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

